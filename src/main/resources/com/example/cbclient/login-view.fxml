<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cbclient.LoginController"
      style="-fx-background-color: #E8F4F8;">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label text="Interface de connexion" style="-fx-text-fill: #2C3E50;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>

        <!-- Identifiant -->
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <Label text="Identifiant :" prefWidth="120.0" style="-fx-text-fill: #34495E;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="identifiantField" prefWidth="250.0" promptText="Entrez votre identifiant"
                      style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5;"/>
        </HBox>

        <!-- Mot de passe -->
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Label text="Mot de passe :" prefWidth="120.0" style="-fx-text-fill: #34495E;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="••••••••••"
                          style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5;"/>
        </HBox>

        <!-- Message d'erreur -->
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #E74C3C;" visible="false">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <font>
                <Font size="12.0"/>
            </font>
        </Label>

        <!-- Boutons -->
        <HBox spacing="20.0" alignment="CENTER">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>

            <Button fx:id="btnConnect" text="Se Connecter" onAction="#handleLogin" prefWidth="150.0"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5;">
            </Button>

            <Button fx:id="btnQuit" text="Quitter" onAction="#handleQuit" prefWidth="150.0"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5;">
            </Button>
        </HBox>
    </VBox>
</VBox>
